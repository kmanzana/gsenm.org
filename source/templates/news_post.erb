      <div class="mkd-post-content">
        <div class="mkd-post-image">
          <img width="1300" height="671" src="<%= news_post.main_image.url %>" class="attachment-full size-full wp-post-image" alt="a" srcset="<%= news_post.main_image.url %>" sizes="(max-width: 1300px) 100vw, 1300px"> </div>
        <div class="mkd-post-text">
          <div class="mkd-post-text-inner clearfix">
            <h1 class="mkd-post-title"><%= news_post.title %></h1>
            <div class="mkd-post-info">
              <div class="mkd-post-info-date">
                <span class="mkd-date"><%= format(news_post.date) %></span>
              </div>
