<div class="mg-single-room">
  <div class="container">
    <div class="row">
      <div class="col-md-7">
        <div class="mg-gallery-container">
          <ul class="mg-gallery" id="mg-gallery">
            <% room.photos.each do |photo| %>
              <li>
                <%= image_tag photo.url(w: 660, h: 350, fit: :crop), alt: photo.alt, class: 'hidden-xs' %>
                <%= image_tag photo.url(w: 400, h: 350, fit: :crop), alt: photo.alt, class: 'visible-xs' %>
              </li>
            <% end %>
          </ul>
          <ul class="mg-gallery-thumb" id="mg-gallery-thumb">
            <% room.photos.each do |photo| %>
              <li><%= image_tag photo.url(w: 100, h: 60, fit: :crop), alt: photo.alt %></li>
            <% end %>
          </ul>
        </div>
      </div>
      <% left_amenities, right_amenities = parse_and_split(room.amenities) %>
      <div class="col-md-5 mg-room-fecilities">
        <h2 class="mg-sec-left-title">Room Amenities</h2>
        <div class="row">
          <div class="col-sm-6">
            <ul>
              <% left_amenities.each do |amenity| %>
                <li><i class='<%= amenity[0] %>'></i> <%= amenity[1] %></li>
              <% end %>
            </ul>
          </div>
          <div class="col-sm-6">
            <ul>
              <% right_amenities.each do |amenity| %>
              <li><i class='<%= amenity[0] %>'></i> <%= amenity[1] %></li>
            <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="mg-single-room-txt">
          <h2 class="mg-sec-left-title">Room Description</h2>
          <%= markdown room.full_description %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 mg-saerch-room pb70">
        <div class="mg-book-now">
          <div class="row">
            <div class="col-md-3">
              <h2 class="mg-bn-title">Search Rooms <span class="mg-bn-big">For rates & availability</span></h2>
            </div>
            <div class="col-md-9">
              <div class="mg-bn-forms">
                <form method='post' action='//www.onressystems.com/webapp/book_search.asp'>
                  <input type="hidden" name="ReferringPage" value="entradaescalante.com">
                  <input type="hidden" name="VendorID" value="685">
                  <input type="hidden" name="HotelName" value="Entrada Escalante">
                  <div class="row">
                    <div class="col-xs-4 mg-input">
                      <div class="input-group date mg-check-in">
                        <div class="input-group-addon"><i class="fa fa-calendar"></i></div>
                        <input name='StartDate' type="text" class="form-control" placeholder="Arrival">
                      </div>
                    </div>
                    <div class="col-xs-4 mg-input">
                      <select name='NumGuests' class="cs-select cs-skin-elastic">
                        <option value="" disabled selected>Adults</option>
                        <% (1..6).each do |adults| %>
                          <option value="<%= adults %>"><%= adults %></option>
                        <% end %>
                      </select>
                    </div>
                    <div class="col-xs-4 mg-input">
                      <input name='Code' type="text" class="form-control" placeholder="Promo Code">
                    </div>
                    <div class="col-xs-4 mg-input">
                      <select name='NumNights' class="cs-select cs-skin-elastic">
                        <option value="" disabled selected>Nights</option>
                        <% (1..14).each do |nights| %>
                          <option value="<%= nights %>"><%= nights %></option>
                        <% end %>
                      </select>
                    </div>
                    <div class="col-xs-4 mg-input">
                      <select name='NumChildren' class="cs-select cs-skin-elastic">
                        <option value="" disabled selected>Children</option>
                        <% (1..6).each do |children| %>
                          <option value="<%= children %>"><%= children %></option>
                        <% end %>
                      </select>
                    </div>
                    <div class="col-xs-4 mg-input">
                      <button type="submit" class="btn btn-main btn-block">Check Now</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>